pipeline {
    agent any

    stages {
        stage('Prepare') {
          steps {
            echo 'Clonning Repository'
            git url: 'git@github.com:Carry-A-Way/Career-Server.git',
              branch: 'main',
              credentialsId: 'github'
            }
            post {
             success {
               echo 'Successfully Cloned Repository'
             }
           	 failure {
               error 'This pipeline stops here...'
             }
          }
        }
        stage('SCM') {
            steps {
                checkout scm
            }
        }
        stage('SonarQube Analysis') {
          steps {
            withSonarQubeEnv("SonarQube-Server") {
                sh "./gradlew sonar"
            }
          }
        }
        stage('SonarQube Quality Gate'){
            steps{
                timeout(time: 1, unit: 'MINUTES') {
                    script{
                        echo "Start SonarQube Quality Gate"
                        def qg = waitForQualityGate()
                        echo "Status: ${qg.status}"
                        if(qg.status != 'OK') {
                            echo "NOT OK Status: ${qg.status}"
                            updateGitlabCommitStatus(name: "SonarQube Quality Gate", state: "failed")
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        } else{
                            echo "OK Status: ${qg.status}"
                            updateGitlabCommitStatus(name: "SonarQube Quality Gate", state: "success")
                        }
                        echo "End SonarQube Quality Gate"
                    }
                }
            }
        }
    }
	post {
        success {
            discordSend description: "SonarQube",
            footer: "SonarQube 빌드가 성공했습니다.",
            link: env.BUILD_URL, result: currentBuild.currentResult,
            title: "SonarQube job",
            webhookURL: "https://discord.com/api/webhooks/1176830413927366696/SWHvUY1sEE4EFKQPf33gJiLClpZz-diK9mOn6OUF0_EFjLTYq2D2Mv8U7HpBVHToQdCT"
        }
        failure {
            discordSend description: "SonarQube",
            footer: "SonarQube 빌드가 실패했습니다.",
            link: env.BUILD_URL, result: currentBuild.currentResult,
            title: "SonarQube job",
            webhookURL: "https://discord.com/api/webhooks/1176830413927366696/SWHvUY1sEE4EFKQPf33gJiLClpZz-diK9mOn6OUF0_EFjLTYq2D2Mv8U7HpBVHToQdCT"
        }
    }
}